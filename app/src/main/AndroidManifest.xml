<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dzone.placement_for_engineers">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ico"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ico"
        android:supportsRtl="true"
        android:theme="@style/MainTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WelcomeActivity"
            android:theme="@style/WelcomeTheme" />
        <activity android:name=".LoginActivity"
            android:theme="@style/SplashTheme"/>
        <activity android:name=".SignupActivity"
            android:theme="@style/SplashTheme"/>
        <activity
            android:name=".MainPageActivity"
            android:noHistory="true"
            android:label="Placement Companies for Engineers"
            android:theme="@style/MainTheme.NoActionBar" />
        <activity android:name=".ForgotPassActivity"
            android:theme="@style/SplashTheme"/>
        <activity
            android:name=".HiringProcProductBased"
            android:label="Product Based Companies"
            android:theme="@style/HiringProcess" />
        <activity
            android:name=".HiringProcServiceBased"
            android:label="Service Based Companies"
            android:theme="@style/HiringProcess" />
        <activity android:name=".AddInternshipExp" />
        <activity android:name=".AddJobExp"></activity>
    </application>

</manifest>